@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>


<h1>All roles</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a class="btn btn-danger" asp-action="DeleteRole" asp-route-roleId="@item.Id"> Delete </a> </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Role" asp-action="Create">Add new</a>
