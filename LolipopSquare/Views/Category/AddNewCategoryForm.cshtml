@model LolipopSquare.Models.ViewModels.AddNewCategoryVM

@{
    ViewData["Title"] = "AddNewCategoryForm";
}

    <div class="row">
      <a class="col-1 backToListArrow"asp-action="Index"> <i class="fa fa-long-arrow-left" aria-hidden="true" id="backToList"></i></a>
<h1 class="h1FontSize col">Add new category</h1>
    </div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNew" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    
</div>

