@model LolipopSquare.Models.ViewModels.EditCategoryVM

@{
    ViewData["Title"] = "EditCategoryForm";
}
<div class="row">
    <a class="col-1" asp-action="Index"> <i class="fa fa-long-arrow-left" aria-hidden="true" id="backToList"></i></a>
<h1 class="col h1FontSize">Edit category</h1>

</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
