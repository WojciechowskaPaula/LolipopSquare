@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<h3> List of all Products</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Avaliability</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Availability</td>
            </tr>
        }
    </tbody>
</table>
